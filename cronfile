# makes sure that python can be found
PATH=/usr/bin:/bin:/usr/local/bin

# PWD can't be set in crontab, using HOME instead (cron sets PWD to HOME before executing commands)
HOME=/app

# working directory for Python
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# scripts go here
@reboot flock -n /tmp/scraping.bigfm.lock python /app/src/scraping/bigfm.py
*/10 * * * * flock -n /tmp/search_queue.lock python /app/src/search_queue.py
@reboot sleep 120 && flock -n /tmp/playlist_manager.lock python /app/src/playlist_manager.py
